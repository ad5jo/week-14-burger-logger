<h1>Da Burger</h1>
<div float: left>
<h2>Hot and ready to eat burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat me!</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>


<div float: right>
<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>



<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured</label><br>
    <input type="hidden" name="devoured" value="1" > Cold<br>
    <input type="hidden" name="devoured" value="0" checked> Fresh
  </div>

  <button type="submit">Create da Burger</button>
</form>

